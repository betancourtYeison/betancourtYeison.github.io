//@import "nib"
@import "slider.css"
@import "icons.css"

.u-title
  border-bottom .1em dashed #00CCFF
  color #00CCFF
  font-weight normal
  font-size 1.5em
  padding-bottom .5em
  text-align center

.u-containerDefault
  max-width 70%
  margin 0 auto

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.5em
  
.MainMenu-link:hover 
  color white
  
.MainMenu-link:active 
  color orange

.Header
  margin-top 3.75em
  background-image url('../images/portada.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0
  &-button
    background white
    border none
    border-radius 50%
    height 2.5em
    line-height 2.5em
    position fixed
    right 1em
    top 1em
    width 2.5em
    z-index 3
    outline 0
    display none
    &.is-active
      display block
.Header-imageContainer
  margin 0

.Header-image
  border .5em solid white
  border-radius 50%
  
.Header-image:hover
  -webkit-transition 3s  
  -webkit-transform rotate3d(1, 2.0, 3.0, 360deg)
  -ms-transform rotate3d(1, 2.0, 3.0, 360deg)
  border-color orange

.Header-name,
.Header-link
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center
  padding 0 1em
  
.Profile-hvUser
  margin 0
  
.Profile-link
  background #4862A3
  border-radius 2em
  color white
  margin-right .5em
  padding .5em 1em
  text-decoration none
  display inline-block
  margin-bottom 1em
  &.hvUser
    background #4862A3 
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3 
  &.github
    background #829AA8
  &:before
    margin-right .5em

.Profile-link:hover
  -webkit-transition 1s
  background orange

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item  
  display inline-block
  margin-bottom 1.8em

.Work-image
  opacity 0.9;
  -webkit-transition opacity 1s ease-in-out, -webkit-transform 0.5s ease;
  transition opacity 1s ease-in-out, transform 0.5s ease;
  cursor pointer;
  
.Work-image:hover
  border-radius 10%
  opacity: 1.0;
  -webkit-transform: scale(1.2,1.2);
  -m-transform: scale(1.2,1.2);
  transform: scale(1.1,1.1);

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Footer
  background-color #0EC3DE
  background-repeat no-repeat
  background-position center    
  padding 2em 0 .2em 0
  text-align center
  background-image url('../images/footer.png')
  background-size 100% 100%
  
.Footer-form
  text-align center
  display inline-block
  overflow hidden  
  position relative
  width 35em;

.Footer-left
  display inline-block
  max-width 20em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  display block
  border-radius 2em
  padding .5em
  margin 0 1em
  outline 0
  margin-bottom 1.6em
  border .1em solid #ddd 

.Footer-textarea
  position absolute
  top 0
  right 0
  outline .1em solid white
  min-height 5.5em
  resize none
  width 50%
  
.Footer-button
  background #00CCFF
  border-radius 2em
  border none
  color white
  padding .5em 1em
  width 50%  
  
.Footer-button:hover
  -webkit-transition 1s
  background orange
  
.Footer-saidw
  color white
  
#contactform
  text-align center
  display inline-block
  background #fafafa
  overflow hidden
  border .1em solid
  border-radius 1em
  border-color black

#c_form
  margin 1.5em   

input:focus, textarea:focus
  border-color #00CCFF

::-webkit-input-placeholder
  font-style italic

::-moz-placeholder
  font-style italic

:-ms-input-placeholder
  font-style italic

input
  &:-moz-placeholder
    font-style italic

#bottom_container
  overflow hidden

#c_information
  width 38em;
  margin-bottom 1.5em;
  border solid .1em #ccc
  background orange
  padding .25em 0 .25em 0
  text-align center
  color white

.c_error
  color #D64242
  margin-left .31em

.hide
  display none

.Slider
  background black
  &-container
    max-width 1024px
    margin 0 auto

@media screen and (max-width: 480px)
  .Profile
    &-link
        display block
        
@media screen and (max-width: 767px)
  .Footer
    &-form      
      display block      
      width 100%;
    &-formInput
    &-textarea
      position relative
      width 70%
      box-sizing border-box
  #c_information
      width 100%
  .Header
    margin-top 0
  .MainMenu
    border-top-right-radius: 2em
    border-bottom-right-radius: 2em
    height auto
    left -200px
    width 200px
    transition .3s
    &.is-active
      left 0
    &-item
      display block